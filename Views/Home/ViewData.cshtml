@model List<sdl7.Models.EntityModel>

@{
    ViewData["Title"] = "Просмотр таблицы материалов";
}

<h1>Просмотр таблицы материалов</h1>

<p>
    <a asp-action="CreateEntity">Добавить новую запись</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Тип</th>
            <th>Вес</th>
            <th>Длина</th>
            <th>ID Проекта</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Class</td>
                <td>@item.Weight</td>
                <td>@item.Length</td>
                <td>@item.ProjectId</td>
                <td>
                    <a asp-action="UpdateEntity" asp-route-id="@item.Id">Редактировать</a>
                </td>
            </tr>
        }
    </tbody>
</table>
