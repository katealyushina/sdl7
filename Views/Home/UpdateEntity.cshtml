@model sdl7.Models.EntityModel

@{
    ViewData["Title"] = "Обновление сущности";
}

<h1>Обновление сущности</h1>

<form asp-action="UpdateEntity" method="post">
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Class">Тип</label>
        <input asp-for="Class" class="form-control" />
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Weight">Вес</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Length">Длина</label>
        <input asp-for="Length" class="form-control" />
        <span asp-validation-for="Length" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectId">ID Проекта</label>
        <input asp-for="ProjectId" class="form-control" />
        <span asp-validation-for="ProjectId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Обновить</button>
</form>
